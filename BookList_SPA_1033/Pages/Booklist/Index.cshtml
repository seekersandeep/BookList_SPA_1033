@page
@model BookList_SPA_1033.Pages.Booklist.IndexModel
@{
}
<div class="row">
<div class="col-9">
    <h2 class="text-primary">Book List</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-info form-control" asp-page="Upsert">Add New Book</a>
        </div>
</div>
<div class="container rounded border p-2 m-2">
    <table class="table table-bordered table-striped table-hover table-active">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Actions</th>  
             </tr>
        </thead>
        <tbody>
            <form method="post">
        @foreach(var book in Model.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Description</td>
                <td>@book.Author</td>
                <td>@book.ISBN</td>
                <td>@book.Price</td>
                <td>
                    <a class="btn btn-info" asp-page="Upsert" asp-route-Id="@book.Id">
                    Edit    
                    </a>
                    <input type= "submit"value="Delete"
                        onclick="return confirm('Want to delete data?')"
                        class="btn btn-danger" asp-route-id="@book.Id" asp-page-handler="Delete"/> 
                
                </td>

            </tr>
            
        }
        </form>
        </tbody>

       
    </table>

</div>
